  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraTodoListApp</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
    <link rel="stylesheet" href="/stylesheets/main.min.css?version=3" />
  </head>
  <body>
    <header>
      <div class='header-content'>
        <h1><a href='/'>Sinatra Todo List</a></h1>
        <div class=user-info>
          <%if Helpers.logged_in?(session)%>
            <a id=new-task-btn href=/tasks/new>+</a>
            <div class=user-icon-wrapper>
              <div class='user-icon'>
                <span ><%=Helpers.current_user(session).username.slice(0,2).upcase%></span>
                <div class=submenu>
                  <a href='/categories'>Categories</a>
                  <a href=/logout>Logout</a>
                </div>
              </div>
            </div>

            
            
          <%else%>
            <a class='login-btn' href='/'>Login</a>
          <%end%>
        </div>
      </div>
    </header>
    <div id=layout-container>
      <%= yield %>
    </div>

    <footer class="branding">
      <small>&copy; 2021 <strong>SinatraTodoListApp</strong></small>
    </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
