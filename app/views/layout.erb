  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraTodoListApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
    <link rel="stylesheet" href="/stylesheets/main.min.css?version=3" />
  </head>
  <body>
    <header>
      <h1><a href='/'>Sinatra Todo List</a></h1>
      <div class=user-info>
        <%if Helpers.logged_in?(session)%>
          <span><%=Helpers.current_user(session).username.upcase%></span>
          <a href=/logout>Logout</a>
          <a id=new-task-btn href=/tasks/new>+</a>
        <%else%>
          <a href='/'>Login</a>
        <%end%>
      </div>
    </header>
    <div id=layout-container>
      <%= yield %>
    </div>

    <footer class="branding">
      <small>&copy; 2021 <strong>SinatraTodoListApp</strong></small>
    </footer>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
